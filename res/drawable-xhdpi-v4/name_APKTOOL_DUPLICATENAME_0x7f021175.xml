<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="2.0px" android:color="#ff2e8ae7" />
            <solid android:color="#ffececec" />
